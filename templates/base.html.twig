<!DOCTYPE html>
<html data-bs-theme="dark">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Pulsation Audio{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="sidebar p-3 m-0">
            <div class="logo text-center mb-3">
                <a href="{{ path('app_index') }}" class="d-flex align-items-center justify-content-center">
                    <img src="{{ asset('images/logo/logo.svg') }}" alt="" class="logo" style="stroke:#fff">
                </a>                
            </div>
            <div class="nav">{{ knp_menu_render('nav') }}</div>
        </header>
        <div class="content">
            <div class="container">
            {% block body %}{% endblock %}
            </div>
        </div>
    </body>
</html>
