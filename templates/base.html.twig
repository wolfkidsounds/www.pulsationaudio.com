<!DOCTYPE html>
<html data-bs-theme="dark">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Pulsation Audio{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="p-3">
            <a id="offcanvasToggle" class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvas" role="button" aria-controls="offcanvas">
                <i class="fa-solid fa-bars"></i>
            </a>
        </div>

        <div id="offcanvas" class="offcanvas offcanvas-start" tabindex="-1" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <a href="{{ path('app_index') }}" class="d-flex align-items-center justify-content-center">
                    <img src="{{ asset('images/logo/logo.svg') }}" class="logo" style="stroke:#fff" height="32">
                </a>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div class="nav">{{ knp_menu_render('nav', {'template': 'menu/menu_sidebar.html.twig'}) }}</div>
            </div>
        </div>

        <div class="content">
            <div class="container">
                {% block body %}{% endblock %}
            </div>
        </div>
    </body>
</html>
